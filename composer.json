{
    "name": "psamatt/Expenditure",
    "description": "A small expenditure app for money minded people",
    "keywords": ["silex"],
    "version": "1.3",
    "license": "MIT",
    "authors": [
        {
            "name": "Matt Goodwin",
            "email": "matt.goodwin491@gmail.com"
        }
    ],
	"autoload": {
		"psr-0": {
			"": "src",
			"Context": "features/",
			"Fixtures": "features/"
		}
	},
    "require": {
        "silex/silex": "1.*",
        "dflydev/doctrine-orm-service-provider": "1.0.*@dev",
        "symfony/security": "2.3.*",
        "symfony/twig-bridge": "2.3.*",
        "symfony/validator": "2.3.*",
        "igorw/config-service-provider": "1.2.*@dev",
        "twig/twig": ">=1.8,<2.0-dev",
        "nesbot/Carbon": "1.*"
    },
    "require-dev": {
        "phpunit/phpunit":             "~3",
        "behat/behat":                 ">=2.4",
        "behat/symfony2-extension":    "*",
        "behat/common-contexts":       "1.*",
        "behat/mink":                  ">=1.4",
        "behat/mink-extension":        "*",
        "behat/mink-goutte-driver":    "*",
        "behat/mink-sahi-driver":      "*",
        "behat/mink-selenium2-driver": "*",
        "phabric/phabric":             "*",
        "doctrine/doctrine-bundle":    "*",
        "vipsoft/doctrine-data-fixtures-extension": "*"
    },
    "config": {
        "bin-dir": "bin/"
    },
    "minimum-stability": "dev"
}
